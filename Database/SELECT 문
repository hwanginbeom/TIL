--1.SELECT 후 정렬
SELECT *FROM ANIMAL_INSORDER BY ANIMAL_ID;


--2. 부분 SELECT +  정렬 역순
SELECT NAME, DATETIMEFROM ANIMAL_INSORDER BY ANIMAL_ID DESC;


--3. WHERE 절 사용
SELECT ANIMAL_ID, NAMEFROM ANIMAL_INSWHERE INTAKE_CONDITION = 'Sick'ORDER BY ANIMAL_ID


--4. WHERE  != 조건 찾기
SELECT ANIMAL_ID,NAMEFROM ANIMAL_INSWHERE INTAKE_CONDITION != 'Aged'ORDER BY ANIMAL_ID

--5. WHERE 다중 정렬 조건
SELECT ANIMAL_ID,NAME,DATETIMEFROM ANIMAL_INSORDER BY NAME,DATETIME DESC

--6. 상위 N개의 레코드
SELECT NAME
FROM ANIMAL_INS
ORDER BY DATETIME LIMIT 1
